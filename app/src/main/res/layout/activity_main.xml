<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:text="Java call native Method"
        android:id="@+id/bt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:text="native get Java filed"
        android:id="@+id/bt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:text="native get Java static filed"
        android:id="@+id/bt3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:text="native call Java method"
        android:id="@+id/bt4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:text="native call Java static method"
        android:id="@+id/bt5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:text="call native"
        android:id="@+id/bt6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:gravity="center"
        android:textSize="22sp"
        android:id="@+id/sample_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Hello World!" />

</LinearLayout>